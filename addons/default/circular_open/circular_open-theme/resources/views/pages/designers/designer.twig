{% set team = entries('designer', 'designers').find(request_segments()| last) %}

<div class="container">
    
    <h1>{{ team.name|raw }}</h1>
    <h4>{{ team.role|raw }}</h4>
    
    <div class="row">
        <div class="col-12 col-md-6">
            {{ img(team.image).class('img-responsive')|raw }}
        </div>
        <div class="col-12 col-md-6">
            <h2>Designer Bio</h2>
            {{ team.bio|raw }}
        </div>
    </div>

    {{ team.content|raw }}
    

</div>