{% set team = entries('designer', 'designers').find(request_segments()| last) %}
<div class="banner designer-banner mb-5 mt-5">
    <div class="container">
        <h1 data-aos="fade-down" data-aos-duration="1000">{{ team.name|raw }}</h1>
        <h4 data-aos="fade-up" data-aos-duration="1000">{{ team.role|raw }}</h4>
    </div>
</div>
<div class="reversed">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-5" data-aos="fade-right" data-aos-duration="1000">
                {{ img(team.image).class('img-responsive')|raw }}
            </div>
            <div class="col-12 col-md-6 offset-md-1" data-aos="fade-left" data-aos-duration="1000">
                <h2>Designer Bio</h2>
                {{ team.bio|raw }}
            </div>
        </div>
    </div>
</div>

{{ team.content|raw }}